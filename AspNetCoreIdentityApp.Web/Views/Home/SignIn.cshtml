@using AspNetCoreIdentityApp.Web.ViewModel
@{
    ViewData["Title"] = "SignIn";
}
@model SignInViewModel
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>SignIn</h1>

        <form asp-controller="Home" asp-action="SignIn" method="post">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">     
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" asp-for="RememberMe" >
                <label class="form-check-label" asp-for="RememberMe"></label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>