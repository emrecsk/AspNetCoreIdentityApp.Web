@using AspNetCoreIdentityApp.Web.ViewModel
@{
    ViewData["Title"] = "PasswordChange";
}
@model PasswordChangeViewModel
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<h2>Password Change</h2>

<div class="row">
    <div class="col-md-6 offset-md-3">
        
        @if (TempData["success"] != null)
        {
            <div class="alert alert-success">@TempData["success"]</div>
        }
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>

        <form asp-controller="Member" asp-action="PasswordChange" method="post">            
            <div class="form-group">
                <label asp-for="PasswordOld"></label>
                <input asp-for="PasswordOld" class="form-control" placeholder="Old Password">
                <span asp-validation-for="PasswordOld" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordNew"></label>
                <input asp-for="PasswordNew" class="form-control" placeholder="New Password">
                <span asp-validation-for="PasswordNew" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordNewConfirm"></label>
                <input asp-for="PasswordNewConfirm" class="form-control" placeholder="New Password Confirm">
                <span asp-validation-for="PasswordNewConfirm" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Change password</button>
        </form>
    </div>
</div>