@model List<RoleAssignmentViewModel>

@{
    ViewData["Title"] = "RoleAssignment";
}

<h1>Role Assignment</h1>

<h4>Assign</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RoleAssignment" asp-route-userid="@ViewBag.UserId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @for (int i = 0; i<Model.Count; i++)
            {
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="@Model[i].IsAssigned">
                    <label class="form-check-label">@Model[i].Name</label>
                    <input type="hidden" asp-for="@Model[i].Id" />
                    <input type="hidden" asp-for="@Model[i].Name"/>
                </div>
            }            
            <div class="form-group">
                <input type="submit" value="Assign" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="Admin" asp-controller="Home" asp-action="UserList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
